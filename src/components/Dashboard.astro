---
import About from "./dashboard/About.astro";
import Bobr from "./dashboard/Bobr.astro";
import Photography from "./dashboard/Photography.astro";
import Socials from "./dashboard/Socials.astro";
import Status from "./dashboard/Status.astro";
import Work from "./dashboard/Work.astro";
---

<section>
    <About />
    <Work />
    <Photography />
    <Status status="available" />
    <Socials />
    <Bobr />
</section>

<script>
    document.addEventListener("keyup", (e) => {
        switch (e.code) {
            case "KeyW": {
                window.location.href = "/work";
                break;
            }
            case "KeyP": {
                window.location.href = "/photography";
                break;
            }
            case "KeyB": {
                window.location.href = "https://bobr.digital";
                break;
            }
        }
    });
</script>

<style>
    section {
        width: 100%;
        max-width: 750px;

        display: grid;
        gap: 12px;
        grid-template-columns: repeat(auto-fit, minmax(min(200px, 100%), 1fr));
        grid-template-rows: repeat(4, auto);
        grid-template-areas: "about work photo" "about work photo" "about status bobr" "about contact bobr";
    }
</style>
