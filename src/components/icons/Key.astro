---
interface Props {
    keyCode: string;
}

const { keyCode } = Astro.props;
---

<div class="sides" aria-hidden>
    <div class="highlight">
        <div class="top">
            <span>{keyCode}</span>
        </div>
    </div>
</div>

<style>
    .sides {
        width: 26px;
        height: 26px;
        padding: 2px;

        display: flex;
        align-items: center;
        justify-content: center;

        border-radius: 6px;
        background: linear-gradient(
            47deg,
            oklch(0 0 0) 15%,
            oklch(0.5208 0 0) 85%
        );
        box-shadow: 0 2px 10px oklch(0 0 0 / 0.5);

        opacity: 0.5;
    }

    .highlight {
        width: 100%;
        height: 100%;
        padding: 1px;

        display: flex;
        align-items: center;
        justify-content: center;

        border-radius: 4px;
        background: linear-gradient(
            300deg,
            oklch(0.5103 0 0) 0%,
            oklch(0.7731 0 0) 50%,
            oklch(0.2768 0 0) 100%
        );
    }

    .top {
        width: 100%;
        height: 100%;

        display: flex;
        align-items: center;
        justify-content: center;

        border-radius: 3px;
        background: linear-gradient(
            208deg,
            oklch(0.3715 0 0) 9%,
            oklch(0.7252 0 0) 93%
        );
    }

    span {
        text-box: trim-both cap alphabetic;
        font-size: 14px;
        color: var(--fg);
    }
</style>
