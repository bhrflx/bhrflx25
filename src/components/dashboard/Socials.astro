---
import Email from "../../assets/envelope.svg";
import Github from "../../assets/github.svg";
import Instagram from "../../assets/instagram.svg";
import LinkedIn from "../../assets/linkedin.svg";
import ChipLink from "../input/ChipLink.astro";
---

<div class="box">
    <h2>Say hello</h2>
    <div class="links">
        <ChipLink
            label="Email"
            href="mailto:hello@felixbahr.com"
            icon={Email}
        />
        <ChipLink
            label="Instagram"
            href="https://www.instagram.com/vagabond.bear/"
            icon={Instagram}
        />
        <ChipLink
            label="Github"
            href="https://github.com/bhrflx"
            icon={Github}
        />
        <ChipLink
            label="LinkedIn"
            href="https://www.linkedin.com/in/felix-bahr-99bb93232/"
            icon={LinkedIn}
        />
    </div>
</div>

<style>
    h2 {
        margin: 0;
        font-size: 16px;
        font-weight: 400;
        color: var(--fg);
        text-transform: uppercase;
    }

    .box {
        grid-area: contact;

        padding: 24px;
        overflow: hidden;

        display: flex;
        flex-flow: column nowrap;
        align-items: center;
        gap: 12px;

        background-color: var(--container);
        border: 1px solid var(--container-stroke);
        border-radius: 42px;
        box-shadow: 0px 2px 4px oklch(0 0 0 / 0.25) inset;
    }

    .links {
        display: flex;
        flex-flow: row wrap;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }
</style>
