---
import Header from "../components/surfaces/Header.astro";
import { Content } from "../content/imprint.md";
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Imprint"
    description="Website imprint of Felix Bahr's personal portfolio."
>
    <article>
        <Header title="Imprint" headingLevel="p" />
        <div class="prose">
            <Content />
        </div>
    </article>
</Layout>

<style>
    article {
        width: 100%;
        max-width: 1200px;
        padding: 24px;
        overflow: hidden;

        height: 100%;

        display: flex;
        flex-flow: column nowrap;
        align-items: center;
        justify-content: center;
        gap: 12px;

        color: var(--fg);

        background-color: var(--container);
        border: 1px solid var(--container-stroke);
        border-radius: 42px;
        box-shadow: 0px 2px 4px oklch(0 0 0 / 0.25) inset;
    }

    @media screen and (min-width: 640px) {
        article {
            height: auto;
        }
    }
</style>
