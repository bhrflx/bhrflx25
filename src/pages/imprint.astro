---
import Header from "../components/surfaces/Header.astro";
import { Content } from "../content/imprint.md";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <article>
        <Header title="Imprint" headingLevel="p" />
        <div class="prose">
            <Content />
        </div>
    </article>
</Layout>

<style>
    article {
        width: 100%;
        max-width: 1200px;
        padding: 24px;
        overflow: hidden;

        height: 100%;

        display: flex;
        flex-flow: column nowrap;
        align-items: center;
        justify-content: center;
        gap: 12px;

        color: var(--fg);

        background-color: var(--container);
        border: 1px solid var(--container-stroke);
        border-radius: 42px;
        box-shadow: 0px 2px 4px oklch(0 0 0 / 0.25) inset;
    }

    .prose {
        & :global(h1) {
            margin-block: 12px;
            font-size: 32px;
            font-weight: 300;
            text-transform: uppercase;
        }

        & :global(h2) {
            margin-block: 12px;
            font-size: 24px;
            font-weight: 300;
            text-transform: uppercase;
        }

        & :global(h3) {
            margin-block: 4px;
            font-size: 16px;
            font-weight: 300;
            text-transform: uppercase;
        }

        & :global(p) {
            margin: 0;
            font-size: 14px;
            line-height: 1.5;

            &:global(:has(+ p)) {
                margin-bottom: 12px;
            }

            &:global(:has(+ :is(h1, h2, h3, h4, h5, h6))) {
                margin-bottom: 32px;
            }
        }

        & :global(a) {
            font: inherit;
            color: var(--fg);
        }

        & :global(img) {
            border-radius: 18px;
        }
    }

    @media screen and (min-width: 640px) {
        article {
            height: auto;
        }
    }
</style>
